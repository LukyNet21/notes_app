---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout>
    <div class="flex mx-auto flex-col justify-center items-center">
        <a href="/dashboard">
            <button
                type="button"
                class="bg-blue-500 hover:bg-blue-700 text-white font-bold mt-2 py-2 px-4 rounded flex gap-2"
            >
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="0.75em"
                    height="1.5em"
                    viewBox="0 0 12 24"
                    ><path
                        fill="currentColor"
                        fill-rule="evenodd"
                        d="m3.343 12l7.071 7.071L9 20.485l-7.778-7.778a1 1 0 0 1 0-1.414L9 3.515l1.414 1.414z"
                    ></path></svg
                >Go back to dashboard</button
            >
        </a>
        <div class="text-2xl text-center flex gap-2 mb-4">
            <h1 id="projectName">Note</h1>
            <input
                type="text"
                placeholder="Note name"
                id="noteNameEditInput"
                class="hidden bg-gray-700"
            />
            <button
                type="button"
                class="hover:text-green-600"
                id="noteNameEditBtn"
            >
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="1em"
                    height="1em"
                    viewBox="0 0 36 36"
                    ><path
                        fill="currentColor"
                        d="M33.87 8.32L28 2.42a2.07 2.07 0 0 0-2.92 0L4.27 23.2l-1.9 8.2a2.06 2.06 0 0 0 2 2.5a2 2 0 0 0 .43 0l8.29-1.9l20.78-20.76a2.07 2.07 0 0 0 0-2.92M12.09 30.2l-7.77 1.63l1.77-7.62L21.66 8.7l6 6ZM29 13.25l-6-6l3.48-3.46l5.9 6Z"
                        class="clr-i-outline clr-i-outline-path-1"></path><path
                        fill="none"
                        d="M0 0h36v36H0z"></path></svg
                >
            </button>
        </div>
        <div id="editorjs" class="border border-gray-50 prose bg-white w-3/4">
        </div>
        <button
            type="button"
            id="saveButton"
            class="bg-blue-500 hover:bg-blue-700 text-white font-bold mt-2 py-2 px-4 rounded"
            >Save Note</button
        >
    </div>
</BaseLayout>

<script src="../scripts/editor.js"></script>
